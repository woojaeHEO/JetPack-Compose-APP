<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.JetPack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="Theme.JetPack" parent="Base.Theme.JetPack"/>

    <style name="Theme.JetPack.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.FAB</item>
    </style>

    <style name="Theme.Sunflower.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="elevation">0dp</item>
    </style>

    <style name="TextAppearance.Sunflower.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>